{
  "endOfLine": "crlf",
  "htmlWhitespaceSensitivity": "ignore",
  "printWidth": 120,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "indent": 2,
  "trailingComma": "none",
  "useTabs": false,
  "proseWrap": "preserve",
  "quoteProps": "as-needed",
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": "*.scss",
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": "*.html",
      "options": {
        "printWidth": 140
      }
    }
  ]
}
